#version 420 core

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

struct PointLight {
  vec3  vColor;
  float fAmbientIntensity;
};

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

uniform PointLight u_oPointLight;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

layout (location = 0) out vec4 f_vColor;

void main(void) {
  f_vColor = vec4(u_oPointLight.vColor.grb * u_oPointLight.fAmbientIntensity, 1.0);
}
