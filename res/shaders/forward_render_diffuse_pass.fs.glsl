#version 420 core

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

struct PointLight {
  vec3  vColor;
  vec3  vPosition;
  float fDiffuseIntensity;
  float fK0;
  float fK1;
  float fK2;
};

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

uniform PointLight u_oPointLight;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

layout (location = 0) out vec4 f_vColor;

void main(void) {
  f_vColor = vec4(u_oPointLight.vColor * u_oPointLight.fDiffuseIntensity, 1.0);
}
