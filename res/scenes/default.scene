<?xml version="1.0" encoding="UTF-8"?>
<node name="scene_01" type="scene">
  <node name="root">
    
    <node name="sky|skydome" type="entity">
      <node name="dome" type="model">
        <geometry name="dome" shape="hemisphere"/>
      </node>
        
      <node name="clouds" type="model">
        <geometry type="procedural" strategy="perlin+some+options"/>
      </node>
      
      <node name="sun" type="model">
        <geometry shape="circle" divisions="4=square,6=hexagon..."> 
          <geometry>
            <mesh>
              <material>
                <channel type="EMISSION" color="white"/>
              </material>
            </mesh>
          </geometry>
        </geometry>
        <node name="root">
          <node name="light" type="light">
            <light name="sun" type="direct"/>
          </node>
        </node>
        
      </node>
    </node>
    
    <node name="lake" type="entity">
      <node name="lake" type="model">
        <geometry shape="volume">
          <animator type="waves" waves="volumetric"/>
        </geometry>
        <node name="root" type="node|joint">
        
          <node name="splash" type="entity">
            <node name="splash" type="emitter">
              <emitter name="splash" />
            </node>
            <node name="decal" type="model">
              <geometry name="decal">
                <geometry>
                  <mesh type="polygon"/>
                </geometry>
              </geometry>
            </node>
          </node>
        
          <node name="boat" type="entity">
            <node name="boat" scope="model">
              <geometry />
              <node name="root" type="joint">
                <node name="R_paddle" type="joint" joint="joint_in_model_skeleton">
                  
                  <node name="paddle" type="entity">
                    <node name="paddle" type="model">
                      <geometry name="paddle"/>
                    </node>
                    <node name="root"/>
                  </node>
                        
                </node>
                <node name="L_paddle" type="joint">
                  
                  <node name="paddle" type="entity">
                    <node name="paddle" type="model">
                      <geometry name="paddle"/>
                      <node name="root" type="node"/>
                    </node>
                  </node>
                  
                </node>
              </node>
            </node>
          </node>
        
        </node>
      </node>
    </node>
    
    <node name="burningSoldier" type="entity">
      <node name="soldier" type="model">
        <geometry name="soldier">
          <geometry/>
        </geometry>
        <node name="root" type="joint">
          <node name="torso" type="joint">
            <node name="L_arm" type="joint">
              
              <node name="shield" type="entity">
                <node name="shield" type="model">
                  <geometry name="shield"/>
                </node>
                
                <node name="L_hand"/>
              </node> <!-- \node@shield -->
            </node> <!-- \node@L_arm -->
            
            <node name="R_arm">
              <node name="R_hand">
              
              <node name="sword" type="entity">
                <node name="sword" type="model">
                  <geometry name="sword"/>
                </node>
              </node>
              
            </node>
            </node> <!-- \node@R_arm -->
          </node> <!-- \node@torso -->
        </node> <!-- \node@root -->
      </node> <!-- \node@soldier -->
      <node name="fire" type="emitter">
        <emitter/>
        <node name="root" type="basic">
          
          <node name="light" type="light">
            <light type="omni|direct|spot|area" />
            <node name="root" type="joint"/>
          </node>
          
        </node>
      </node>
    </node>
    
    <node name="trigger|event|switch" type="entity" controller="file@./path/to/controller.script"/>
    
  </node>
</node>
